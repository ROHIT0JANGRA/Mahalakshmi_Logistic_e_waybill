
@{
    ViewBag.Title = "NewUser";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-user-plus"></i> Add User </h3>
            </div>
            <!-- /.col-lg-12 -->
        
        <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            User Details
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-asterisk"></i> </span>
                                        <input type="text" class="form-control badge-border" placeholder="User Code">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-edit"></i> </span>
                                        <input type="text" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-map-marker"></i> </span>
                                        <input type="text" class="form-control" placeholder="Address">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-phone"></i> </span>
                                        <input type="text" class="form-control" placeholder="Mobile No">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope"></i> </span>
                                        <input type="text" class="form-control" placeholder="Login Id">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-key"></i> </span>
                                        <input type="text" class="form-control" placeholder="Password">
                                    </div>
                                </div>
                                <div align="center">
                                    <button type="button" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                                    <button type="button" class="btn btn-danger"><i class="fa fa-refresh"></i> Reset</button>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
                <!-- /.row -->

            </div>
