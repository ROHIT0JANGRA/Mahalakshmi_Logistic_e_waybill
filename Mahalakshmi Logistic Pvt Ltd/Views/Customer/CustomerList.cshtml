@model Mahalakshmi_Logistic_Pvt_Ltd.Models.Customers.Customer
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="col-4">
    <h2 class="page-header">Customer List</h2>
</div>

<div class="col-4 pull-right">
    <a href="@Url.Action("CreateCustomer", "Customer")" class="page-header"><i class="fa fa-plus-circle"></i>Add New</a>
</div>
<div class="row">
    <div class="panel panel-primary col-lg-12">

        <div class="table-responsive" style="height:auto">

            <table class="table" >
                <thead style="background-color:dimgray;color:white;padding:1em;">

                    <tr class="bg-secondary">
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Mobile
                        </th>
                        <th>
                            Pan No
                        </th>
                        <th>
                            Gst No
                        </th>
                        <th>
                            State
                        </th>
                        <th>
                            District
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            Contact Person
                        </th>
                        <th>
                            Designation
                        </th>
                        <th>
                          Status
                        </th>
                        <th>Edit|Delete/View</th>
                    </tr>

                </thead>
                @foreach (var item in ViewBag.customerList)
                {
                    <tbody>

                        <tr>
                            <td>
                                @item.C_Name
                            </td>
                            <td>
                                @item.C_email
                            </td>
                            <td>
                                @item.C_mobile
                            </td>
                            <td>
                                @item.C_pan_no
                            </td>
                            <td>
                                @item.Gstin
                            </td>
                            <td>
                                @item.Cors_State
                            </td>
                            <td>
                                @item.Cors_District
                            </td>
                            <td>
                                @item.Cors_City
                            </td>
                            <td>
                                @item.Contact_name
                            </td>
                            <td>
                                @item.Contact_designation
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                <a href="@Url.Action("EditCustomer", "Customer", new { id = @item.Id })"><i class="fa fa-edit"></i></a> |


                                <a href="@Url.Action("DeleteCustomer","Customer", new { id = @item.Id })" style="color:red"><i class="fa fa-trash-o bg-danger "></i></a>
                                <a href="@Url.Action("Details","Customer", new { id = @item.Id })" style="color:deepskyblue"><i class="fa fa-eye-slash bg-primary "></i></a>

                            <td>
                        </tr>
                    </tbody>
                }


            </table>
        </div>

    </div>
</div>
